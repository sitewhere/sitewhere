<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
	xmlns="http://sitewhere.io/schema/sitewhere/microservice/user-management"
	xmlns:sw="http://sitewhere.io/schema/sitewhere/microservice/common"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://sitewhere.io/schema/sitewhere/microservice/user-management"
	elementFormDefault="qualified" attributeFormDefault="unqualified">

	<xsd:import namespace="http://sitewhere.io/schema/sitewhere/microservice/common"
		schemaLocation="http://sitewhere.io/schema/sitewhere/microservice/common/current/microservice-common.xsd" />

	<xsd:element name="user-management" type="userManagementType">
		<xsd:annotation>
			<xsd:documentation>
				Provides configuration information for the
				SiteWhere user management microservice.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<xsd:complexType name="userManagementType">
		<xsd:all>
			<xsd:element ref="sw:abstract-datastore">
				<xsd:annotation>
					<xsd:documentation>
						Datastore used for persistence.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:all>
	</xsd:complexType>
</xsd:schema>